<odoo>
  <data>
    <record id="view_custom_crm_visita_form" model='ir.ui.view'>
      <field name='name'>view.custom.crm.visit.form</field>
      <field name='model'>custom_crm.visit</field>
      <field name='arch' type='xml'>
        <form string='Visita'>
          <sheet>
            <group name='group_top'>
              <group name='group_left'>
                  <field name='customer'/>
                  <field name='date'/>
                  <field name='type'/>
              </group>
               <group name='group_right'>
                  <field name='name'/>
                  <field name='done'/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_custom_crm_visita_tree" model='ir.ui.view'>
      <field name='name'>view.custom.crm.visit.form</field>
      <field name='model'>custom_crm.visit</field>
      <field name='arch' type='xml'>
        <tree string='Visita'>
            <field name='customer'/>
            <field name='name'/>
            <field name='type'/>
            <field name='date'/>
        </tree>
      </field>
    </record>

    

  </data>
</odoo>